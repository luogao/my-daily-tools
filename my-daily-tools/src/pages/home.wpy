<template>
  <view class="home">
    <view class='page-block' wx:if="{{userFullInfo}}">
      <view class='userinfo-block'>
        <text>{{userFullInfo.nickName}}</text>
        <image mode="aspectFit" src="{{userFullInfo.avatarUrl}}"></image>
      </view>
      <view class='tool-block'>
        <repeat key="{{index}}" item="item" for="{{tools}}">
          <toolbar :item="item" />
        </repeat>
      </view>
    </view>
  </view>
</template>

<script>
  import AV from 'leancloud-storage/dist/av-weapp-min.js'
  import wepy from 'wepy'
  import toolbar from '@/components/toolbar'
  export default class Index extends wepy.page {
    components = {
      toolbar: toolbar
    }
    data = {
      userFullInfo: null,
      tools: [{
        imgSrc: '../../images/todo.svg',
        url: '123'
      }, {
        imgSrc: '../../images/location.svg',
        url: '456'
      }, {
        imgSrc: '../../images/movie.svg',
        url: '789'
      }]
    }
    onLoad() {
      let self = this
      // const user = AV.User.current()
      wepy.showLoading({
        title: '加载中...',
        mask: true
      })
      AV.User.loginWithWeapp().then(_user => {
        self.userFullInfo = _user.toJSON()
        self.$apply()
        wepy.hideLoading()
        console.log(self.userFullInfo)
      }).catch(console.error)
    }
    methods = {
      goPage(url) {
        const _url = `../${url}/${url}`
        wepy.navigateTo({
          url: _url
        })
      }
    }
  }
</script>
