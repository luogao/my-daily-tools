  <view @tap='gotoDetailPage' class='movie-item' hover-class="movie-item-hover" hover-stay-time="50">
    <image src="{{item.img}}" mode='aspectFill' lazy-load="true"></image>
    <view class='item-info'>
      <text class='item-name'>{{item.t}}</text>
      <text class='item-score'>{{item.r == '-1'?"无":item.r}}</text>
      <text class='item-actors'>{{item.aN1 ? item.aN1 : '无'}}</text>
