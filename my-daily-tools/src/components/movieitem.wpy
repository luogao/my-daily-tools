<script>
  import wepy from 'wepy'
  export default class List extends wepy.component {
    props = {
      item: {}
    }
    methods = {
      gotoDetailPage() {
        const _url = `../pages/${this.item.url}`
        wepy.navigateTo({
          url: _url
        })
      }
    }
    onLoad() {}
  }
