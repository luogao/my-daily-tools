/**app.wxss**/

page {
  height: 100%;
}

.container {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-hover-class {
  opacity: .5;
  transition: all 0.1s;
}

.one-line {
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}