.list-item-wrap {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  animation: fadeInUp 0.8s;
  padding: 0 20rpx;
}

.lists-container {
  scroll-behavior: smooth;
  width: 100%;
  box-sizing: border-box;
  overflow: auto;
  flex: 1;
}

.list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(136, 136, 136, 0.43);
  transition: all 0.1s;
  position: relative;
}

.list-item.finish {
  border-top: 10rpx solid #63d47a;
}

.list-item.not-finish {
  border-top: 10rpx solid #ff0302;
}

.list-item .item-title {
  padding-bottom: 20rpx;
  font-size: 48rpx;
  font-weight: 500;
}

.item-dateinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-item .item-deadline {
  font-size: 24rpx;
  color: #000;
}

.list-item .item-date {
  font-size: 24rpx;
  color: #999;
}

.list-item .item-summary {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #888;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

button.create-btn {
  position: fixed;
  bottom: 60rpx;
  background: #63d47a;
  color: #fff;
  width: 290rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  right: 40rpx;
  border: 0px;
  box-shadow: 4rpx 16rpx 40rpx 0 rgba(31, 32, 68, 0.25);
}

.actions-container {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 10px;
  box-shadow: 0 4rpx 8rpx rgba(136, 136, 136, 0.43);
  /* box-shadow: rgba(0, 0, 0, 0.14) 0px 4px 5px 0px,
                rgba(0, 0, 0, 0.12) 0px 1px 10px 0px,
                rgba(0, 0, 0, 0.2) 0px 2px 4px -1px; */
}

.actions-container button.status-toggle {
  box-shadow: 0 4rpx 8rpx rgba(136, 136, 136, 0.43);
  color: #fff;
  background: #909399;
  border: none;
  float: left;
}

.actions-container button.location-btn {
  box-shadow: 0 4rpx 8rpx rgba(136, 136, 136, 0.43);
  color: #fff;
  background: #909399;
  border: none;
  float: left;
}

.actions-container button:not(:first-child) {
  margin-left: 20rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
  to {
    opacity: 1;
    transform: none;
  }
}