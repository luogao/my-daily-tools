.list-item-wrap {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.label-1{
  border: 1px solid #ccc;
  margin: 10px;
  display: none;
}

.label-1__text{
  display: inline-block;
  vertical-align: middle;
}

.label-1__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
}

.label-1__icon-checked {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
}

.list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10px;
  margin: 10px 0;
  border-radius: 5px;
  box-shadow: 2px 8px 20px 0 rgba(31, 32, 68, 0.25);
  transition: all 0.1s;
  position: relative;
}

.list-item.finish {
  border-top: 5px solid #63d47a;
}

.list-item.not-finish {
  border-top: 5px solid #ff0302;
}

.list-item .item-title {
  padding-bottom: 10px;
  font-size: 24px;
  font-weight: 500;
}

.item-dateinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.list-item .item-deadline {
  font-size: 14px;
  color: #000;
}

.list-item .item-date {
  font-size: 12px;
  color: #999;
}

.list-item .item-summary {
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #888;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

button.create-btn {
  position: fixed;
  bottom: 30px;
  background: #63d47a;
  color: #fff;
  width: 145px;
  height: 45px;
  line-height: 45px;
  font-size: 18px;
  right: 20px;
  border: 0px;
  box-shadow: 2px 8px 20px 0 rgba(31, 32, 68, 0.25);
}
