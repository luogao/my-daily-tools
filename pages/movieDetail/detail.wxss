/* pages/movieDetail/detail.wxss */
Page{
  background-color: #000 !important;
}

body{
  height: 100%;
}

.movie-detail-container {
  height: 100%;
  background: #000;
}

.movie-big-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.movie-basic-info {
}

.movie-basic-info {
  overflow: hidden;
  position: relative;
  background: #000;
}

.movie-basic-info image {
  width: 100%;
  z-index: 0;
}

.movie-basic-info .movie-info-txt {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 9;
  padding-left: 2%;
  padding-right: 2%;
  box-sizing: border-box;
  color: #fff;
}

.movie-score {
  color: #e4a813;
  font-size: 24px;
  text-align: left;
  padding-right: 10px;
}

.movie-info-txt .movie-name {
  font-size: 36px;
  font-weight: 400;
  text-align: left;
}

.movie-info-txt .movie-commentSpecial {
  font-size: 14px;
  font-weight: 100;
}

.movie-info-txt .movie-commentSpecial::before {
  content: '——';
  padding-right: 5px;
}

.movie-basic-info::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8) 50%, rgba(0, 0, 0, 1));
  z-index: 2;
}

.movie-detail-info {
  padding-top: 10px;
  padding-bottom: 10px;
  font-weight: 100;
  color: #ccc;
  background: #000;
  font-size: 12px;
  padding-left: 2%;
  padding-right: 2%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.movie-story,.movie-actor,.movie-comment{
  padding-left: 2%;
  padding-right: 2%;
  box-sizing: border-box;
  color:#ccc;
}
.section-title{
  color: #fff;
  display: block;
  padding-top:15px; 
  padding-bottom: 5px;
  font-weight: 100;
}
.movie-story-text{
  font-size: 16px;
  font-weight: 100;
  text-indent: 2em;
  display:inline-block;
}
.movie-actor .scroller{
  white-space: nowrap;
}
.movier-item{
  width: 25%;
  box-sizing: border-box;
  padding: 5px;
  display: inline-flex;
  flex-direction: column;
}

.movier-item .actor-name{
  font-size: 12px;
  text-align: center;
  padding-top: 5px;
}
.img-box{
  position: relative;
  padding: 75% 50%;
}
.img-box image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
}
.movie-comment-item{
  font-size:14px;
  padding-bottom: 10px;
  padding-top: 10px;
}
.movie-comment-item .comment-rate{
  color: #e4a813;
  padding-right: 10px;
}
.movie-comment-item .comment-content{
  font-size:14px;
  font-weight: 100;
}
.movie-comment{
  padding-bottom: 30px;
}