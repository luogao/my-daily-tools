/* pages/movieDetail/detail.wxss */

page {
  background: #000;
}

body {
  height: 100%;
}

.movie-detail-container {
  height: 100%;
  background: #000;
}

.movie-big-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.movie-basic-info {
  overflow: hidden;
  position: relative;
  background: #000;
  height: 100vh;
}

.movie-basic-info image {
  width: 100%;
  z-index: 0;
}

.movie-basic-info .first-screen-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}

.movie-basic-info .movie-info-txt {
  padding: 2%;
  box-sizing: border-box;
  color: #fff;
}

.movie-score {
  color: #e4a813;
  font-size: 48rpx;
  text-align: left;
  padding-right: 20rpx;
  line-height: 1;
}

.movie-info-txt .movie-name {
  font-size: 72rpx;
  font-weight: 400;
  text-align: left;
}

.movie-info-txt .movie-commentSpecial {
  font-size: 28rpx;
  font-weight: 100;
}

.movie-info-txt .movie-commentSpecial::before {
  content: '——';
  padding-right: 10rpx;
}

.movie-basic-info::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8) 50%, rgba(0, 0, 0, 1));
  z-index: 2;
}

.movie-detail-info {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight: 100;
  color: #ccc;
  background: #000;
  font-size: 24rpx;
  padding-left: 2%;
  padding-right: 2%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.movie-story, .movie-actor, .movie-comment {
  padding-left: 2%;
  padding-right: 2%;
  box-sizing: border-box;
  color: #ccc;
}

.section-title {
  color: #fff;
  display: block;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  font-weight: 100;
}

.movie-story-text {
  font-size: 32rpx;
  font-weight: 100;
  text-indent: 2em;
  display: inline-block;
}

.movie-actor .scroller {
  white-space: nowrap;
}

.movier-item {
  width: 25%;
  box-sizing: border-box;
  padding: 10rpx;
  display: inline-flex;
  flex-direction: column;
}

.movier-item .actor-name {
  font-size: 24rpx;
  text-align: center;
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.img-box {
  position: relative;
  height: 216rpx;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.movie-comment-item {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.movie-comment-item .comment-rate {
  color: #e4a813;
  padding-right: 20rpx;
}

.movie-comment-item .comment-content {
  font-size: 28rpx;
  font-weight: 100;
}

.movie-comment {
  padding-bottom: 60rpx;
}
