/* pages/home/home.wxss */

.home {
  height: 100%;
}

.page-block {
  padding: 10px 20px 0 20px;
}

.userinfo-block {
  font-size: 36px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin: 0 3%;
}

.userinfo-block image {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
}

.tool-block {
  margin-top: 50px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 50px 3% 0;
}

.tool-block-item {
  width: 130px;
  height: 130px;
  border-radius: 8px;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
  margin-bottom: 50px;
  padding: 20px;
  box-sizing: border-box;
  transition: all 0.3s;
}

.tool-block-item:nth-child(1) {
  background-color: #51adcf;
}

.tool-block-item:nth-child(2) {
  background-color: #a5ecd7;
}

.tool-block-item:nth-child(3) {
  background-color: #2E383F;
}

.tool-block-item image {
  width: 100%;
  height: 100%;
}

.tool-item-hover {
  box-shadow: none;
}
