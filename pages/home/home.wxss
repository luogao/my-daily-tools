/* pages/home/home.wxss */

.home {
  height: 100%;
}

.page-block {
  padding: 20rpx 40rpx 0 40rpx;
}

.userinfo-block {
  font-size: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  animation: fadeIn 0.5s;
  height: 132rpx;
  font-weight: 300;
}

.userinfo-block .user-avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  overflow: hidden;
  animation: fadeIn 0.5s;
}

button.default-avatar-btn {
  margin: 0;
  border: none;
  padding: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 72rpx;
  line-height: unset;
  animation: fadeIn 0.5s;
}

.default-avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.tool-block {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 60rpx 0 0;
}

.tool-block-item {
  width: 260rpx;
  height: 260rpx;
  border-radius: 8px;
  box-shadow: 0rpx 10px 40px -10px rgba(0, 64, 128, 0.2);
  margin-bottom: 100rpx;
  padding: 40rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.tool-block-item:nth-child(1) {
  background-color: #51adcf;
}

.tool-block-item:nth-child(2) {
  background-color: #a5ecd7;
}

.tool-block-item image {
  width: 100%;
  height: 100%;
}

.tool-item-hover {
  box-shadow: none;
  transform: translateY(3px);
}

.location-block {
  padding-top: 20rpx;
  font-weight: 100;
  display: flex;
  align-items: center;
}

.location-block.hasdata image {
  transition: all 0.3s ease;
  filter: none;
  opacity: 1;
}

.location-block>image {
  width: 60rpx;
  transition: all 0.3s ease;
  filter: grayscale(100%);
  opacity: 1;
}

.action-block {
  display: flex;
  align-items: center;
}

.action-block .delete-btn {
  white-space: nowrap;
  border: 0rpx;
  line-height: 0;
  padding: 10rpx;
  border-radius: 50%;
}

.action-block .delete-btn image {
  width: 40rpx;
}
