/* pages/photoEditor/photoEditor.wxss */

.editor-area {
  width: 100vw;
  height: 100vw;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.editor-element-wrapper {
  box-sizing: border-box;
}

.editor-element-wrapper-view {
  position: absolute;
  width: 100%;
  height: 100%;
}

.editor-element-wrapper-view.active::after {
  content: '';
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #000;
  box-sizing: border-box;
  z-index: 0;
}

.editor-element-wrapper-view.active .rotate-btn,
.editor-element-wrapper-view.active .resize-btn {
  display: block;
}

.element {
  width: 400rpx;
}

.resize-btn {
  bottom: calc(40rpx / 3.333 * -1);
  right: calc(40rpx / 3.333 * -1);
}

.rotate-btn {
  bottom: calc(50rpx / 3.333 * -1);
  left: calc(50rpx / 3.333 * -1);
}

.rotate-btn, .resize-btn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  display: none;
  z-index: 1;
  padding: 8rpx;
  background: #000;
  border-radius: 50%;
}

.rotate-btn image, .resize-btn image {
  box-sizing: border-box;
  display: block;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.user-avatar-image-wrapper {
  width: 100vw;
  height: 100vw;
}

.user-avatar-image {
  width: 100%;
  height: 100%;
  display: block;
}

.hat-image {
  display: block;
  width: 100%;
  height: 100%;
}

.actions-wrapper {
  margin-top: 100rpx;
}

button.save-btn {
  width: 300rpx;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 5px -3px #333;
  border-color: #aaa;
}

button.btn-hover {
  box-shadow: none;
  transform: translateY(3px) scale(0.98, 0.98);
  
}

.main-photo {
  position: absolute;
  z-index: -1;
  top: -9999999px;
  left: -99999999px;
}
